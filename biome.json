{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "app/**/*.ts",
      "app/**/*.tsx",
      "lib/**",
      "components/**",
      "__tests__/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noImplicitAnyLet": "error",
        "noArrayIndexKey": "error",
        "noAssignInExpressions": "error",
        "useIterableCallbackReturn": "error"
      },
      "style": {
        "noNonNullAssertion": "error"
      },
      "a11y": {
        "noSvgWithoutTitle": "error",
        "useButtonType": "error",
        "noLabelWithoutControl": "error",
        "useKeyWithClickEvents": "error",
        "noStaticElementInteractions": "error",
        "useSemanticElements": "error"
      },
      "complexity": {
        "noForEach": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
